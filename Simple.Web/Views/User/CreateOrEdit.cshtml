@model Simple.Web.Models.User
@{

}


<div class="container">

    <form asp-action="CreateOrEdit" asp-controller="User" method="post" class="bg-light shadow border-top rounded mt-5">

        <h1 class="text-center mt-3">FillUp User Details</h1>
        <hr>
        <div class="container-lg">
            <div class="form-group row m-3 mt-2">
                <label asp-for="Name" for="inputnamel3" class="col-sm-2 col-form-label mt-2">Name</label>
                <div class="col-sm-10 mt-3">
                    <input asp-for="Name" type="text" class="form-control" id="inputnamel3" placeholder="Enter Your Name">
                </div>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Email" for="inputemail3" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="Email" type="email" class="form-control" id="inputemail3" placeholder="Enter Your Email">
                </div>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Phone" for="inputnum3" class="col-sm-2 col-form-label">Phone</label>
                <div class="col-sm-10">
                    <input asp-for="Phone" type="number" class="form-control" id="inputnum3" placeholder="Enter Phone Number">
                </div>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Address" for="inputadd3" class="col-sm-2 col-form-label">Address</label>
                <div class="col-sm-10">
                    <input asp-for="Address" type="text" class="form-control" id="inputadd3" placeholder="Enter Address">
                </div>
            </div>
            <div class="form-group row m-3">
                <label asp-for="Description" class="col-sm-2 col-form-label" for="exampleFormControlTextarea1">Description</label>
                <div class="col-sm-10">
                    <textarea asp-for=Description class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Describe yourself"></textarea>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary my-3">Submit</button>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>